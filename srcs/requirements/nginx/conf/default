
server {
    listen 443 ssl;

    server_name iobba.42.fr;

    root /var/www/html;

    index index.php;

    ssl_certificate $CERTS_;
    ssl_certificate_key /etc/ssl/private/nginx.key;

    ssl_protocols TLSv1.3;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass wordpress:9000;
    }
}
